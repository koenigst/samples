{
	"name": "demos",
	"version": "0.0.1",
	"author": "koenigst",
	"license": "MIT-0",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "vite build",
		"ci": "npm run build && npm run lint && npm test",
		"format": "prettier --write .",
		"lint": "npm run lint:svelte && npm run lint:prettier && npm run lint:eslint",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"preview": "vite preview",
		"start": "vite dev",
		"test": "npm run test:component && npm run test:e2e",
		"test:component": "vitest run",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.0.0",
		"@playwright/test": "^1.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/jest-dom": "^6.0.0",
		"@testing-library/svelte": "^5.0.0",
		"@types/eslint": "^9.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.0",
		"eslint-plugin-svelte": "^2.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.0",
		"vitest": "^2.0.0"
	}
}
